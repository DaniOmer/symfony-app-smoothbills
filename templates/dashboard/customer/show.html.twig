<!DOCTYPE html>

<title>{{ 'customer.name'|trans }}</title>

{% block body %}
    <h1>{{ 'customer.name'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ customer.mail }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ customer.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('dashboard.customer.index') }}">{{ 'crud.back_to_list'|trans }}</a>

    <a href="{{ path('dashboard.customer.edit', {'id': customer.id}) }}">{{ 'crud.edit'|trans }}</a>

    {{ include('dashboard/customer/_delete_form.html.twig') }}
{% endblock %}
