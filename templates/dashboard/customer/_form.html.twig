{% form_theme form 'theme/form.html.twig' %}

<section>
    {{ form_start(form) }}
        <article class="mb-5">
            <h1 class="text-subtitle font-title font-semibold mb-3">Informations générales</h1>
            <div id="customer_info" class="grid grid-cols-2 gap-x-5">
                {{ form_row(form.name, {
                    label: 'Nom',
                }) }}
                {{ form_row(form.mail, {
                    label: 'Adresse mail',
                }) }}
                {{ form_row(form.phone, {
                    label: 'Téléphone',
                }) }}
                {{ form_row(form.type, {
                    label: 'Type de client',
                }) }}
            </div>
        </article>
        <article>
            <h1 class="text-subtitle font-title font-semibold mb-3">Coordonnées</h1>
            <div id="customer_address" class="grid grid-cols-2 gap-x-5">
                {{ form_row(form.address.address, {
                    label: 'Adresse',
                }) }}
                {{ form_row(form.address.zipcode, {
                    label: 'Code postal',
                }) }}
                {{ form_row(form.address.city, {
                    label: 'Ville',
                }) }}
                {{ form_row(form.address.country, {
                    label: 'Pays',
                }) }}
            </div>
        </article>
        <button class="btn mt-4 bg-primary text-white py-2 px-4 rounded-md hover:bg-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-opacity-50">
            {{ button_label|default('Save') }}
        </button>
    {{ form_end(form) }}
</section>