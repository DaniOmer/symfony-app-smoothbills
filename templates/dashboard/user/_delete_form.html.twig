<form method="post" action="{{ path('dashboard.settings.user.delete', {'id': entity.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
    <button 
        class="hover:bg-primary/10 px-4 py-2 w-full rounded-b-md"
    >
        {{ 'crud.delete'|trans }}
    </button>
</form>
