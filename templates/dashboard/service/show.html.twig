{% extends 'base/base_dashboard.html.twig' %}

{% block title %}{{ 'service.name'|trans }}{% endblock %}

{% block body %}
<section class="flex flex-col px-4 pt-3 pb-6 bg-white rounded-xl border border-solid border-gray-500 border-opacity-30 hover:border-primary/40 max-w-[800px] mx-auto">
    <header class="flex gap-4 mb-4 items-center justify-center">
        <div class="flex justify-center items-center px-4 py-2 bg-backgroundIcon rounded-xl">
            <div class="w-8 h-8">
                {{ ux_icon("mdi:handshake") }}
            </div>
        </div>
        <h1 class="text-lg leading-7 text-black">{{ service.name }}</h1>
    </header>

    <div class="mb-4 px-4 py-2 bg-backgroundIcon rounded-lg">
        <h2 class="text-md font-semibold leading-6 text-black">Description</h2>
        <p class="text-gray-700">{{ service.description }}</p>
    </div>

    <div class="grid grid-cols-2 gap-4 text-center">
        <div>
            <h2 class="text-md font-semibold leading-6 text-black">Prix</h2>
            <p class="text-gray-700">{{ service.price }}€</p>
        </div>
        <div>
            <h2 class="text-md font-semibold leading-6 text-black">Durée estimée</h2>
            <p class="text-gray-700">{{ service.estimatedDuration }}</p>
        </div>
        <div>
            <h2 class="text-md font-semibold leading-6 text-black">Créé le</h2>
            <p class="text-gray-700">{{ service.createdAt|date('d M Y') }}</p>
        </div>
        <div>
            <h2 class="text-md font-semibold leading-6 text-black">Mis à jour le</h2>
            <p class="text-gray-700">{{ service.updatedAt|date('d M Y') }}</p>
        </div>
    </div>

    <div class="flex justify-center mt-6 gap-4">
        <a href="{{ path('dashboard.service.edit', { 'uid': service.uid }) }}" class="btn bg-primary border border-primary text-white py-2 px-6 rounded-md hover:bg-transparent hover:text-black transition ease-in-out delay-75">Modifier</a>
    </div>
</section>
{% endblock %}
