{# templates/dashboard/service/_delete_form.html.twig #}
<form method="post" action="{{ path('dashboard.service.delete', {'id': service.id}) }}" onsubmit="return confirm(`{{ 'crud.delete_confirmation'|trans }}`);">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
    <button class="hover:bg-primary/10 px-4 py-2 w-full rounded-b-md">
        {{ 'crud.delete'|trans }}
    </button>
</form>
