{# templates/theme/form.html.twig #}

{% block form_row %}
    <div class="mb-4">
        {{ form_label(form, null, { label_attr: { class: 'block text-sm font-medium text-gray-700 mb-1' } }) }}
        {{ form_widget(form, { attr: { class: 'p-2 block w-full border border-tertiary/50 focus:border-primary focus:ring-primary rounded-sm' } }) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block form_errors %}
    {% if errors|length > 0 %}
        <div class="text-red-500 mt-1 text-sm">
            <ul>
                {% for error in errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endblock %}